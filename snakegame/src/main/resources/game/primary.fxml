<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.Controller" onKeyPressed="#onKeyPressed">
   <children>
      <Label text="Snake Game" style="-fx-font-size: 24px; -x-font-weight: bold;" />
      <Label fx:id="scoreLabel" style="-fx-font-size: 30px; -x-font-weight: bold; -fx-font-family: 'Impact'; -fx-text-fill: GREEN;" text="Score: "  />
      <Button fx:id="startButton" onAction="#handleStartClick" text="Start" />
      <StackPane>
               <GridPane alignment="CENTER" hgap="1" vgap="1" fx:id="gameBoardGrid">
                  <columnConstraints>
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                     <ColumnConstraints prefWidth="40.0" />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                     <RowConstraints prefHeight ="40.0" />
                  </rowConstraints>
               </GridPane>
               <Label fx:id="gameOverLabel" style="-fx-font-size: 100px; -x-font-weight: bold; -fx-font-family: 'Impact'; -fx-text-fill: RED; -fx-background-color: black;" text = "Game Over!" visible="false" />
         </StackPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
